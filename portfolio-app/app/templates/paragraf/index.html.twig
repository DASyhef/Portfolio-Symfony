{% extends 'base.html.twig' %}

{% block title %}Paragraf index{% endblock %}

{% block body %}
    <h1>Paragraf index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Paragraf</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paragraf in paragrafs %}
            <tr>
                <td>{{ paragraf.id }}</td>
                <td>{{ paragraf.paragraf }}</td>
                <td>
                    <a href="{{ path('app_paragraf_show', {'id': paragraf.id}) }}">show</a>
                    <a href="{{ path('app_paragraf_edit', {'id': paragraf.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_paragraf_new') }}">Create new</a>
{% endblock %}
